<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="alertDialogStyle_colorful" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--    <item name="android:windowBackground">@color/transparent</item>-->
        <item name="android:background">@color/dialogBackground_colorful</item>
        <!--    <item name="android:panelColorBackground">@color/windowBackground_colorful</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColorAlertDialogListItem">@color/primary_colorful</item>
        <item name="android:textColorPrimary">@color/primary_colorful</item>
        <item name="android:textColor">@color/primary_colorful</item>
        <item name="android:colorAccent">@color/primary_colorful</item>
        <item name="android:windowTitleStyle">@style/dialogTitle_colorful</item>

        <item name="buttonStyle">@style/alertDialogButtonStyle_colorful</item>
        <item name="buttonBarButtonStyle">@style/alertDialogButtonStyle_colorful</item>
        <item name="buttonBarPositiveButtonStyle">@style/alertDialogPositiveButtonStyle_colorful</item>
        <item name="buttonBarNegativeButtonStyle">@style/alertDialogButtonStyle_colorful</item>
        <item name="buttonBarNeutralButtonStyle">@style/alertDialogButtonStyle_colorful</item>

        <item name="ed_dialog_secondary_background_color">@color/dialogSecondaryBackground_colorful</item>
        <item name="android:dialogCornerRadius" tools:ignore="NewApi">10dp</item>
    </style>

    <style name="alertDialogButtonStyle_colorful" parent="Widget.AppCompat.Button">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimary">@color/primary_colorful</item>
        <item name="android:textColor">@color/primary_colorful</item>
        <item name="android:colorAccent">@color/primary_colorful</item>
        <item name="android:backgroundTint">@color/buttonFillGradiantLight_colorful</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="alertDialogPositiveButtonStyle_colorful" parent="alertDialogButtonStyle_colorful">
        <item name="android:textColor">@color/primary_colorful</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialogStyle_colorful" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/dialogBackground_colorful</item>
        <item name="android:fullBright">@color/windowBackground_colorful</item>
        <item name="android:fullDark">@color/windowBackground_colorful</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorAlertDialogListItem">@color/primary_colorful</item>
        <item name="android:textColorPrimary">@color/primary_colorful</item>
        <item name="android:textColor">@color/primary_colorful</item>
        <item name="android:colorAccent">@color/primary_colorful</item>
        <item name="android:windowTitleStyle">@style/dialogTitle_colorful</item>

        <item name="buttonStyle">@style/alertDialogButtonStyle_colorful</item>
        <item name="buttonBarButtonStyle">@style/alertDialogButtonStyle_colorful</item>
        <item name="buttonBarPositiveButtonStyle">@style/alertDialogPositiveButtonStyle_colorful</item>
        <item name="buttonBarNegativeButtonStyle">@style/alertDialogButtonStyle_colorful</item>
        <item name="buttonBarNeutralButtonStyle">@style/alertDialogButtonStyle_colorful</item>

        <item name="ed_cross_glyph">@drawable/cross_glyph_dark</item>
    </style>

</resources>