<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="0px" android:left="0px" android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_colorful" />
            <stroke android:width="2px"
                android:color="@color/buttonStopFillGradiantLight_colorful" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:top="0px" android:left="0px" android:right="2px" android:bottom="2px">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_colorful" />
            <stroke android:width="2px"
                android:color="@color/buttonStopFillGradiantVeryLight_colorful" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:top="3px" android:left="3px" android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/buttonCornerRadius_colorful" />
            <stroke android:width="0px" android:color="@color/solidBlack" />
            <!-- <solid android:color="@color/buttonFill_colorful" /> -->
            <gradient
                android:angle="135"
                android:centerX="5%"
                android:startColor="@color/buttonStopFillGradiantCenter_colorful"
                android:centerColor="@color/buttonStopFillGradiantDark_colorful"
                android:endColor="@color/buttonStopFillGradiantVeryDark_colorful"
                android:type="linear"
                />
        </shape>
    </item>


    <!-- inside border  -->
    <item
        android:top="@dimen/buttonSelectedInsideStrokePadding_colorful" android:left="@dimen/buttonSelectedInsideStrokePadding_colorful" android:right="@dimen/buttonSelectedInsideStrokePadding_colorful" android:bottom="@dimen/buttonSelectedInsideStrokePadding_colorful">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonStopCornerInsideBorderRadius_colorful" />
            <stroke android:width="@dimen/buttonStopSelectedInsideStroke_colorful" android:color="@color/buttonStopSelectedInsideStroke_colorful" />
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

</layer-list>