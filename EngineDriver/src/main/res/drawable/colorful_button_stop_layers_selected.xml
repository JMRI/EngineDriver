<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_colorful" />
            <stroke android:width="@dimen/buttonStopSelectedStroke_colorful" android:color="@color/buttonStopSelectedStroke_colorful" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:top="1px" android:left="1px" android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_colorful" />
            <stroke android:width="0px" android:color="@color/black" />
            <gradient
                android:angle="135"
                android:centerX="5%"
                android:startColor="@color/buttonStopFillGradiantLight_colorful"
                android:centerColor="@color/buttonStopFillGradiantCenter_colorful"
                android:endColor="@color/buttonStopFillGradiantDark_colorful"
                android:type="linear"
                />
        </shape>
    </item>

    <!-- inside border  -->
    <item
        android:top="@dimen/buttonSelectedInsideStrokePadding_colorful" android:left="@dimen/buttonSelectedInsideStrokePadding_colorful" android:right="@dimen/buttonSelectedInsideStrokePadding_colorful" android:bottom="@dimen/buttonSelectedInsideStrokePadding_colorful">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_colorful" />
            <stroke android:width="@dimen/buttonStopSelectedInsideStroke_colorful" android:color="@color/buttonStopSelectedInsideStroke_colorful" />
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

</layer-list>