<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--top right-->
    <item
        android:top="0px" android:left="0px"
        android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="0px" android:color="@color/solidBlack" />
            <solid android:color="@color/buttonFillGradiantUltraUltraDark2_colorful" />

        </shape>
    </item>

    <item
        android:top="2px" android:left="2px"
        android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle"  >
            <corners android:radius="7dp" />
            <stroke android:width="0px" android:color="@color/solidBlack" />
            <solid android:color="@color/buttonFillGradiantUltraDark2_colorful" />
        </shape>
    </item>

    <item
        android:top="6px" android:left="6px"
        android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <stroke android:width="0px" android:color="@color/solidBlack" />
            <solid android:color="@color/buttonFillGradiantVeryDark2_colorful" />
        </shape>
    </item>

    <!--bottom left-->
    <item
        android:top="8px" android:left="8px"
        android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:color="@color/buttonFillGradiantVeryLight2_colorful" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:top="10px" android:left="10px"
        android:right="2px" android:bottom="2px">
        <shape android:shape="rectangle"  >
            <corners android:radius="7dp" />
            <solid android:color="@color/buttonFillGradiantLight2_colorful" />
        </shape>
    </item>

    <!--    face -->
    <item
        android:top="8px" android:left="8px"
        android:right="2px" android:bottom="2px">
        <shape android:shape="rectangle">

            <corners android:radius="5dp" />
            <stroke android:width="0px" android:color="@color/solidBlack" />
            <!-- <solid android:color="@color/buttonFill_colorful" /> -->
            <gradient
                android:angle="135"
                android:centerX="5%"
                android:startColor="@color/buttonFillGradiantCenter2_colorful"
                android:centerColor="@color/buttonFillGradiantDark2_colorful"
                android:endColor="@color/buttonFillGradiantVeryDark2_colorful"
                android:type="linear"
                />
        </shape>
    </item>



    <!-- inside border 2 -->
    <item
        android:top="@dimen/buttonActivated2InsideStrokePaddingTopLeft_colorful"
        android:left="@dimen/buttonActivated2InsideStrokePaddingTopLeft_colorful"
        android:right="@dimen/buttonActivated2InsideStrokePaddingBottomRight_colorful"
        android:bottom="@dimen/buttonActivated2InsideStrokePaddingBottomRight_colorful">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerInsideBorderRadius_colorful" />
            <stroke android:width="@dimen/buttonSelectedInsideStroke_colorful" android:color="@color/buttonActivatedHoveredInside2Stroke_colorful" />
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

</layer-list>