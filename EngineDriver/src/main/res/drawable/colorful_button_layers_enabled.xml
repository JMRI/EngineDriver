<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="0px" android:left="0px" android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_colorful" />
            <stroke android:width="2px"
                android:color="@color/buttonFillGradiantLight_colorful" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:top="2px" android:left="2px" android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_colorful" />
            <stroke android:width="2px"
                android:color="@color/buttonFillGradiantVeryLight_colorful" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:top="3px" android:left="3px" android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/buttonCornerRadius_colorful" />
            <stroke android:width="0px" android:color="@color/solidBlack" />
            <!-- <solid android:color="@color/buttonFill_colorful" /> -->
            <gradient
                android:angle="135"
                android:centerX="70%"
                android:endColor="@color/buttonFillGradiantCenter_colorful"
                android:centerColor="@color/buttonFillGradiantDark_colorful"
                android:startColor="@color/buttonFillGradiantVeryDark_colorful"
                android:type="linear"
                />
        </shape>
    </item>

</layer-list>