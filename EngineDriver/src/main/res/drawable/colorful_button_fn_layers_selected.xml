<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="0px" android:left="0px" android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_colorful" />
            <stroke android:width="2px"
                android:color="@color/buttonFnFillGradiantLight_colorful" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:top="0px" android:left="0px" android:right="2px" android:bottom="2px">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_colorful" />
            <stroke android:width="2px"
                android:color="@color/buttonFnFillGradiantVeryLight_colorful" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:top="3px" android:left="3px" android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/buttonCornerRadius_colorful" />
            <stroke android:width="0px" android:color="@color/solidBlack" />
            <!-- <solid android:color="@color/buttonFill_colorful" /> -->
            <gradient
                android:angle="135"
                android:centerX="5%"
                android:startColor="@color/buttonFnFillGradiantCenter_colorful"
                android:centerColor="@color/buttonFnFillGradiantDark_colorful"
                android:endColor="@color/buttonFnFillGradiantVeryDark_colorful"
                android:type="linear"
                />
        </shape>
    </item>


    <!-- inside border  -->
    <item
        android:top="@dimen/buttonFnSelectedInsideStrokePadding_colorful" android:left="@dimen/buttonFnSelectedInsideStrokePadding_colorful" android:right="@dimen/buttonFnSelectedInsideStrokePadding_colorful" android:bottom="@dimen/buttonFnSelectedInsideStrokePadding_colorful">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonFnCornerInsideBorderRadius_colorful" />
            <stroke android:width="@dimen/buttonFnSelectedInsideStroke_colorful"
                android:color="@color/buttonFnSelectedInsideStroke_colorful" />
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

</layer-list>