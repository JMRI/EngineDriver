            <corners android:radius="@dimen/buttonCornerRadius_outline" />
            <stroke android:width="@dimen/buttonSelectedInsideStroke_outline" android:color="@color/buttonActivatedHoveredInsideStroke_outline" />
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

    <!-- inside border 2 -->
    <item
        android:top="@dimen/buttonActivated2InsideStrokePadding_outline" android:left="@dimen/buttonActivated2InsideStrokePadding_outline" android:right="@dimen/buttonActivated2InsideStrokePadding_outline" android:bottom="@dimen/buttonActivated2InsideStrokePadding_outline">
