            <corners android:radius="@dimen/buttonCornerRadius_outline" />
            <stroke android:width="@dimen/buttonSelectedInsideStroke_outline" android:color="@color/buttonActivatedHoveredInside2Stroke_outline" />
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

</layer-list>