<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_outline" />
            <stroke android:width="@dimen/buttonSelectedStroke_outline" android:color="@color/buttonStroke_outline" />
            <solid android:color="@color/buttonSelectedFill_outline"/>
        </shape>
    </item>

    <!-- inside border  -->
    <item
        android:top="@dimen/buttonActivatedInsideStrokePadding_outline" android:left="@dimen/buttonActivatedInsideStrokePadding_outline" android:right="@dimen/buttonActivatedInsideStrokePadding_outline" android:bottom="@dimen/buttonActivatedInsideStrokePadding_outline">
