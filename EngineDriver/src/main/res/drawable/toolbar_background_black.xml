<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle"  >
            <stroke android:width="@dimen/buttonStopSelectedStroke_ultra" android:color="@color/buttonCommonSelectedStroke_ultra" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:top="1px" android:left="1px" android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle">

            <stroke android:width="2px" android:color="@color/solidBlack" />
            <!-- <solid android:color="@color/buttonFill_ultra" /> -->
            <gradient
                android:angle="225"
                android:centerX="10%"
                android:startColor="@color/buttonCommonFillGradiantCenter_ultra"
                android:centerColor="@color/buttonCommonFillGradiantDark_ultra"
                android:endColor="@color/solidBlack"
                android:type="linear"
                />
        </shape>
    </item>

</layer-list>