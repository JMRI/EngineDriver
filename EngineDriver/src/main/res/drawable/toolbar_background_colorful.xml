<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle"  >
            <stroke android:width="@dimen/buttonStopSelectedStroke_colorful" android:color="@color/buttonSelectedStroke_colorful" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:top="1px" android:left="1px" android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle">

            <stroke android:width="2px" android:color="@color/solidBlack" />
            <!-- <solid android:color="@color/buttonFill_colorful" /> -->
            <gradient
                android:angle="225"
                android:centerX="30%"
                android:startColor="@color/buttonFillGradiantDark_colorful"
                android:centerColor="@color/buttonFillGradiantVeryDark_colorful"
                android:endColor="@color/buttonFillGradiantUltraDark_colorful"
                android:type="linear"
                />
        </shape>
    </item>

</layer-list>