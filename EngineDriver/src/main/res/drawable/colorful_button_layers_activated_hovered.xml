<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_colorful" />
            <stroke android:width="@dimen/buttonStopSelectedStroke_colorful" android:color="@color/buttonSelectedStroke_colorful" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:top="1px" android:left="1px" android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_colorful" />
            <stroke android:width="0px" android:color="@color/black" />
            <gradient
                android:angle="135"
                android:centerX="5%"
                android:startColor="@color/buttonFillGradiantDark_colorful"
                android:centerColor="@color/buttonFillGradiantCenter_colorful"
                android:endColor="@color/buttonFillGradiantLight_colorful"
                android:type="linear"
                />
        </shape>
    </item>

    <!-- inside border  -->
    <item
        android:top="@dimen/buttonActivatedInsideStrokePadding_colorful" android:left="@dimen/buttonActivatedInsideStrokePadding_colorful" android:right="@dimen/buttonActivatedInsideStrokePadding_colorful" android:bottom="@dimen/buttonActivatedInsideStrokePadding_colorful">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_colorful" />
            <stroke android:width="@dimen/buttonSelectedInsideStroke_colorful" android:color="@color/buttonActivatedHoveredInsideStroke_colorful" />
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

    <!-- inside border 2 -->
    <item
        android:top="@dimen/buttonActivated2InsideStrokePadding_colorful" android:left="@dimen/buttonActivated2InsideStrokePadding_colorful" android:right="@dimen/buttonActivated2InsideStrokePadding_colorful" android:bottom="@dimen/buttonActivated2InsideStrokePadding_colorful">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_colorful" />
            <stroke android:width="@dimen/buttonSelectedInsideStroke_colorful" android:color="@color/buttonActivatedHoveredInside2Stroke_colorful" />
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

</layer-list>