<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_black" />
            <stroke android:width="@dimen/buttonDisabledStroke_black" android:color="@color/buttonDisabledStroke_black" />
            <solid android:color="@color/buttonDisabledFill_black" />
        </shape>
    </item>

    <item
        android:state_pressed="true"
        android:state_enabled="true"
        android:drawable="@drawable/round_button_layers_selected">
    </item>

    <item
        android:state_selected="true"
        android:state_activated="false"
        android:state_enabled="true"
        android:drawable="@drawable/round_button_layers_selected">
    </item>

    <item
        android:state_selected="false"
        android:state_activated="true"
        android:state_hovered="true"
        android:state_enabled="true"
        android:drawable="@drawable/round_button_layers_activated_hovered">
    </item>

    <item
        android:state_selected="false"
        android:state_activated="true"
        android:state_hovered="false"
        android:state_enabled="true"
        android:drawable="@drawable/round_button_layers_activated">
    </item>

    <item
        android:state_selected="false"
        android:state_activated="false"
        android:state_hovered="true"
        android:state_enabled="true"
        android:drawable="@drawable/round_button_layers_hovered">
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_black" />
            <stroke android:width="@dimen/buttonStroke_black" android:color="@color/buttonStroke_black" />
            <solid android:color="@color/buttonFill_black" />
        </shape>
    </item>
</selector>