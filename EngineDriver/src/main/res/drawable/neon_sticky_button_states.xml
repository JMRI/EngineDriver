<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/buttonCornerRadius_neon" />
            <stroke android:width="@dimen/buttonDisabledStroke_neon" android:color="@color/buttonDisabledStroke_neon" />
            <solid android:color="@color/buttonDisabledFill_neon" />
        </shape>
    </item>

    <item
        android:state_pressed="true"
        android:drawable="@drawable/neon_button_layers_selected">
    </item>

    <item
        android:state_selected="true"
        android:drawable="@drawable/neon_button_layers_selected">
    </item>

    <item
        android:state_selected="false"
        android:state_activated="true"
        android:state_hovered="true"
        android:state_enabled="true"
        android:drawable="@drawable/neon_button_layers_activated_hovered">
    </item>

    <item
        android:state_selected="false"
        android:state_activated="true"
        android:state_hovered="false"
        android:state_enabled="true"
        android:drawable="@drawable/neon_button_layers_activated">
    </item>

    <item
        android:state_selected="false"
        android:state_activated="false"
        android:state_hovered="true"
        android:state_enabled="true"
        android:drawable="@drawable/neon_button_layers_hovered">
    </item>

    <item
        android:state_selected="false"
        android:state_activated="false"
        android:state_hovered="false"
        android:state_enabled="true"
        android:drawable="@drawable/neon_button_layers_enabled">
    </item>

</selector>