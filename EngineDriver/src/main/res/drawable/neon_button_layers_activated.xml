<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    used as the additional Volume Keys highlight for the Select button-->


    <item
        android:top="0px" android:left="0px" android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_neon" />
            <stroke android:width="2px"
                android:color="@color/neon_blue_very_light" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:top="2px" android:left="2px" android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_neon" />
            <stroke android:width="2px"
                android:color="@color/neon_blue_ultra_light" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:top="3px" android:left="3px" android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_neon" />
            <stroke android:width="0px" android:color="@color/black" />
            <gradient
                android:angle="135"
                android:centerX="70%"
                android:endColor="@color/buttonCommonFillGradiantLight_neon"
                android:centerColor="@color/buttonCommonFillGradiantCenter_neon"
                android:startColor="@color/buttonCommonFillGradiantDark_neon"
                android:type="linear"
                />
        </shape>
    </item>

    <!-- inside border  -->
    <item
        android:top="@dimen/buttonActivatedInsideStrokePadding_neon" android:left="@dimen/buttonActivatedInsideStrokePadding_neon"
        android:right="@dimen/buttonActivatedInsideStrokePadding_neon" android:bottom="@dimen/buttonActivatedInsideStrokePadding_neon">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_neon" />
            <stroke
                android:width="@dimen/buttonSelectedInsideStroke_neon"
                android:color="@color/buttonActivatedHoveredInsideStroke_neon" />
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

</layer-list>