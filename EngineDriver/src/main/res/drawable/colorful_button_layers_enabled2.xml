<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--bottom left-->
    <item
        android:top="6px" android:left="6px"
        android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="0px" android:color="@color/solidBlack" />
            <solid android:color="@color/buttonFillGradiantUltraDark2_colorful" />
        </shape>
    </item>

    <item
        android:top="6px" android:left="6px"
        android:right="2px" android:bottom="2px">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <stroke android:width="0px" android:color="@color/solidBlack" />
            <solid android:color="@color/buttonFillGradiantVeryDark2_colorful" />
        </shape>
    </item>

    <!--top right-->
    <item
        android:top="0px" android:left="0px"
        android:right="4px" android:bottom="4px">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <stroke android:width="0px" android:color="@color/solidBlack" />
            <solid android:color="@color/buttonFillGradiantLight2_colorful" />
        </shape>
    </item>

    <item
        android:top="2px" android:left="2px"
        android:right="4px" android:bottom="4px">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <stroke android:width="0px" android:color="@color/solidBlack" />
            <solid android:color="@color/buttonFillGradiantVeryLight2_colorful" />
        </shape>
    </item>

    <!--    face -->
    <item
        android:top="4px" android:left="4px"
        android:right="4px" android:bottom="4px">
        <shape android:shape="rectangle">

            <corners android:radius="5dp" />
            <stroke android:width="0px" android:color="@color/solidBlack" />
            <!-- <solid android:color="@color/buttonFill_colorful" /> -->
            <gradient
                android:angle="135"
                android:centerX="70%"
                android:endColor="@color/buttonFillGradiantCenter2_colorful"
                android:centerColor="@color/buttonFillGradiantDark2_colorful"
                android:startColor="@color/buttonFillGradiantVeryDark2_colorful"
                android:type="linear"
                />
        </shape>
    </item>
</layer-list>