<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_neon" />
            <stroke android:width="@dimen/buttonStopSelectedStroke_neon" android:color="@color/buttonCommonSelectedStroke_neon" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:top="1px" android:left="1px" android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_neon" />
            <stroke android:width="0px" android:color="@color/black" />
            <gradient
                android:angle="135"
                android:centerX="5%"
                android:startColor="@color/buttonCommonFillGradiantLight_neon"
                android:centerColor="@color/buttonCommonFillGradiantCenter_neon"
                android:endColor="@color/buttonCommonFillGradiantDark_neon"
                android:type="linear"
                />
        </shape>
    </item>

    <!-- inside border  -->
    <item
        android:top="@dimen/buttonSelectedInsideStrokePadding_neon" android:left="@dimen/buttonSelectedInsideStrokePadding_neon" android:right="@dimen/buttonSelectedInsideStrokePadding_neon" android:bottom="@dimen/buttonSelectedInsideStrokePadding_neon">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_neon" />
            <stroke android:width="@dimen/buttonStopSelectedInsideStroke_neon" android:color="@color/buttonStopSelectedInsideStroke_neon" />
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

</layer-list>