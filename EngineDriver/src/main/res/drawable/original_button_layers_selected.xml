<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="0dip" android:left="0dip"
        android:right="0dip" android:bottom="0dip">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_original" />
            <solid android:color="@color/buttonCommonFillGradiantUltraDark_original" />
        </shape>
    </item>

    <item
        android:top="1dip" android:left="1dip"
        android:right="0dip" android:bottom="0dip">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_original" />
            <solid android:color="@color/buttonCommonFillGradiantVeryDark_original" />
        </shape>
    </item>

    <item
        android:top="2dip" android:left="2dip"
        android:right="0dip" android:bottom="0dip">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_original" />
            <solid android:color="@color/buttonCommonFillGradiantDark_original" />
        </shape>
    </item>

    <item
        android:top="3dip" android:left="3dip"
        android:right="1dip" android:bottom="1dip">
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/buttonCornerRadius_original" />
            <stroke android:width="0dip" android:color="@color/black" />
            <gradient
                android:angle="270"
                android:centerX="30%"
                android:startColor="@color/buttonCommonFillGradiantDark_original"
                android:centerColor="@color/buttonCommonFillGradiantCenter_original"
                android:endColor="@color/buttonCommonFillGradiantLight_original"
                android:type="linear" />
        </shape>
    </item>

    <item android:gravity="bottom"
        android:top="40dip" android:left="12dip"
        android:bottom="3dip" android:right="10dip"

        tools:targetApi="m">
        <shape android:shape="rectangle">
            <corners
                android:radius="3dip" />
            <size
                android:width="30dip"
                android:height="7dip" />
            <stroke
                android:width="1dip"
                android:color="#73CF00" />
            <solid android:color="#98F128" />
        </shape>
    </item>

</layer-list>