<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="0px" android:left="0px" android:right="3px" android:bottom="3px">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_original" />
            <stroke
                android:width="@dimen/buttonStopSelectedStroke_original"
                android:color="@color/buttonStopSelectedStrokeDark_original" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:top="3px" android:left="3px" android:right="0px" android:bottom="0px">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_original" />
            <stroke
                android:width="@dimen/buttonStopSelectedStroke_original"
                android:color="@color/buttonStopSelectedStrokeLight_original" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item
        android:top="2px" android:left="2px" android:right="2px" android:bottom="2px">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/buttonCornerRadius_original" />
            <stroke android:width="1px" android:color="@color/buttonStopSelectedOutlineStroke_original" />
<!--            <solid android:color="@color/buttonStopSelectedFill_original" />-->
            <gradient
                android:angle="270"
                android:centerX="50%"
                android:startColor="@color/buttonStopSelectedFillGradiantLight_original"
                android:centerColor="@color/buttonStopSelectedFillGradiantCenter_original"
                android:endColor="@color/buttonStopSelectedFillGradiantDark_original"
                android:type="linear" />
        </shape>
    </item>

</layer-list>