<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/intro_background"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="4dp"
    android:paddingRight="16dp"
    android:paddingBottom="80dp">

    <LinearLayout
        android:id="@+id/intro_theme_title0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/intro_theme_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prefThemeTitle"
            android:textColor="@color/solidWhite"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/intro_theme_summary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/introThemeSummary"
                android:textColor="@color/solidWhite"
                android:textSize="18sp" />



            <RadioGroup
                android:id="@+id/intro_throttle_type_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/intro_theme_default_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/intro_theme_default"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/prefThemeDefaultValue"
                    android:textSize="18sp"
                    tools:ignore="RtlHardcoded" />

                <RadioButton
                    android:id="@+id/intro_theme_black_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/intro_theme_black"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/prefThemeDefaultValue"
                    android:textSize="18sp"
                    tools:ignore="RtlHardcoded" />

                <RadioButton
                    android:id="@+id/intro_theme_outline_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/intro_theme_outline"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:text="@string/prefThemeDefaultValue"
                    tools:ignore="RtlHardcoded" />

                <RadioButton
                    android:id="@+id/intro_theme_ultra_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/intro_theme_ultra"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:text="@string/prefThemeDefaultValue"
                    tools:ignore="RtlHardcoded" />

                <RadioButton
                    android:id="@+id/intro_theme_colorful_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/intro_theme_colorful"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:text="@string/prefThemeDefaultValue"
                    tools:ignore="RtlHardcoded" />

                <RadioButton
                    android:id="@+id/intro_theme_neon_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/intro_theme_neon"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:text="@string/prefThemeDefaultValue"
                    tools:ignore="RtlHardcoded" />

            </RadioGroup>


        </LinearLayout>

    </ScrollView>

</LinearLayout>