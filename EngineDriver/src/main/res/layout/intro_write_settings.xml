<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/intro_background"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="4dp"
    android:paddingRight="16dp"
    android:paddingBottom="80dp">

    <LinearLayout
        android:id="@+id/intro_write_settings_title0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/intro_write_settings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permissionsRequestTitle"
            android:textColor="@color/solidWhite"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/line0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/intro_write_settings_image"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:srcCompat="@drawable/icon_xl"
                tools:ignore="ContentDescription" />


            <TextView
                android:id="@+id/intro_write_settings_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="@string/permissionsWriteSettings"
                android:textColor="@color/solidWhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/intro_write_settings_label_Additional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/permissionsWriteSettingsAdditional"
                android:textColor="@color/solidWhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/intro_write_settings_label_Additional2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/permissionsWriteSettingsAdditional2"
                android:textColor="@color/solidWhite"
                android:textSize="12sp" />

            <Button
                android:id="@+id/intro_write_settings_launch"
                style="?attr/ed_normal_button_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/permissionsSystemSettingsButton" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>