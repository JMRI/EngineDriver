<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:text="@string/host_ip"/>

        <EditText
            android:id="@android:id/edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            android:maxLength="15"
            android:singleLine="true"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="@string/port"/>

        <EditText
            android:id="@+id/edit_port"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:inputType="number"
            android:maxLength="5"
            tools:ignore="Autofill,LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="@string/app_name_dcc_ex"/>

        <CheckBox
            android:id="@+id/isDccEx"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:inputType="number"
            android:maxLength="5"
            tools:ignore="Autofill,LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_marginTop="6sp"
        android:orientation="vertical"
        android:padding="0dp"
        android:background="@color/solidWhite"
        tools:ignore="PxUsage"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

          <Button
              android:id="@+id/auto_server_connect_clear"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/DccexClearCommands"/>
              android:text="@string/DccexClearCommands"/>

          <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/auto_server_connect_current_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/autoServerConnectCurrentServerButtonLabel"/>

    </LinearLayout>

</LinearLayout>
