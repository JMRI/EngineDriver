<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/file_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shareFileDialogTitle"
        android:textSize="20sp" />

        <ListView
            android:id="@+id/file_dialog_listview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end" >

        <Button
            android:id="@+id/file_dialog_button_cancel"
            style="?attr/ed_small_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:padding="0dp"
            android:drawableStart="?attr/ed_cross_glyph"
            android:drawableLeft="?attr/ed_cross_glyph"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>
</LinearLayout>