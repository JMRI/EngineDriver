            android:orientation="vertical"
            android:gravity="center_horizontal">

            <CheckBox
                android:id="@+id/cv_bit_calculator_bit_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cv_bit_calculator_bit_4_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <CheckBox
                android:id="@+id/cv_bit_calculator_bit_3"
