<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.75" >

        <TextView
            android:id="@+id/to_user_name"
            style="?attr/list_item_style"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="15dp"
            android:paddingBottom="4dp"
            android:text="Test user name string"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/to_system_name"
            style="?attr/list_id_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:text="System name"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <Button
        android:id="@+id/turnout_throw"
        style="?attr/ed_list_button_style"
        android:layout_width="18sp"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"
        android:text="@string/throw_button" />
    <Button
        android:id="@+id/turnout_close"
        style="?attr/ed_list_button_style"
        android:layout_width="18sp"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"
        android:text="@string/close_button" />

    <Button
        android:id="@+id/to_current_state_desc"
        style="?attr/ed_list_button_style"
        android:layout_width="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.25"
        android:text="State"
        android:textSize="18sp"
        android:visibility="gone"
        tools:ignore="HardcodedText" />
</LinearLayout>