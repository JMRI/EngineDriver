                android:layout_height="24sp"
                android:layout_below="@+id/clear_Loco_List_button"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="6dp"
                android:text="@string/order"
                android:drawableLeft="?attr/ed_sort_glyph"
