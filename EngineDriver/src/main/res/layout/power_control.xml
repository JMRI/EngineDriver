                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/DccexTrackPower7layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0sp"
                        android:paddingBottom="4dp"
