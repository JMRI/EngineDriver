                        style="?attr/ed_fn_scrollview_style"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <TableLayout
                            android:id="@+id/function_buttons_table_0"
                            android:layout_width="match_parent"
