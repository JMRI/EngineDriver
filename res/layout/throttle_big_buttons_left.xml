                            android:layout_height="0dp"
                            android:layout_weight="0"
                            android:maxHeight="9999dp"
                            android:minHeight="9999dp"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"></jmri.enginedriver.VerticalSeekBar>

                        <Button
